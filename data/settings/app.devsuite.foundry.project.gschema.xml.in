<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="app.devsuite.foundry.project" path="/app/devsuite/foundry/project/" gettext-domain="foundry">

    <key name="projects-directory" type="s">
      <default>''</default>
      <summary>Projects Directory</summary>
      <description>The default directory for projects such as '~/Projects'</description>
    </key>

    <key name="config-id" type="s">
      <default>''</default>
      <summary>Selected configuration for building</summary>
      <description>The configuration that has been selected and will be restored the next time the project loads.</description>
    </key>

    <key name="device-id" type="s">
      <default>'native'</default>
      <summary>Default device</summary>
      <description>The device that should be set as the default when the project loads.</description>
    </key>

    <key name="vcs-id" type="s">
      <default>'none'</default>
      <summary>VCS backend</summary>
      <description>The VCS backend to use for the project.</description>
    </key>

    <key name="build-system" type="s">
      <default>''</default>
      <summary>Build System</summary>
      <description>The build-system implementation to use for building</description>
    </key>

    <key name="unit-test-locality" type="s">
      <choices>
        <choice value="pipeline"/>
        <choice value="runtime"/>
      </choices>
      <default>'runtime'</default>
      <summary>Unit Test Locality</summary>
      <description>What environment to use when running unit tests</description>
    </key>

  </schema>
</schemalist>
