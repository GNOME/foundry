<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="app.devsuite.foundry.terminal" gettext-domain="foundry">
    <key name="allow-bold" type="b">
      <default>true</default>
      <summary>Allow Bold</summary>
      <description>Allow the use of bold escape sequences</description>
    </key>
    <key name="allow-hyperlinks" type="b">
      <default>true</default>
      <summary>Allow Hyperlinks</summary>
      <description>Allow the use of hyperlink escape sequences</description>
    </key>
    <key name="scroll-on-output" type="b">
      <default>true</default>
      <summary>Scroll On Output</summary>
      <description>Automatically scroll when applications within the terminal output text</description>
    </key>
    <key name="scroll-on-keyboard-input" type="b">
      <default>true</default>
      <summary>Scroll On Keyboard Input</summary>
      <description>Automatically scroll when typing to insert text</description>
    </key>
    <key name="limit-scrollback" type="b">
      <default>true</default>
      <summary>Limit Scrollback</summary>
      <description>Limit the number of lines that are stored in memory for terminal scrollback</description>
    </key>
    <key name="max-scrollback-lines" type="u">
      <default>10000</default>
      <range min="0" max="10000000"/>
      <summary>Maximum Lines in Scrollback</summary>
      <description>The maximum number of lines stored in history when limiting scrollback</description>
    </key>
  </schema>
</schemalist>
